@using ClickME.Models
@model Login

<h1 class="text-center">Войти</h1>

<form asp-action="Login" asp-controller="Registration" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="mb-3">
        <label class="form-label" asp-for="Name"></label>
        <input class="form-control" type="type" asp-for="Name" />
    </div>
    
    <div class="mb-3">
        <label class="form-label" asp-for="Password"></label>
        <input class="form-control" type="password" asp-for="Password" />
    </div>
    
    <button class="btn btn-primary">Войти</button>

</form>

<p class="text-center">Нету аккаунта? <a asp-controller="Registration" asp-action="Index">зарегистрируйтесь</a> в системе</p>